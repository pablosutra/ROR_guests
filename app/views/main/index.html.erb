<div class="container push-top-55" ng-controller="InvitadosCtrl">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12"><h4>Filtro: </h4></div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<div class="form-inline push-bottom-10" role="form">
					<div class="form-group">
						<label>Nombre: </label><input type="text" ng-model="filtro.nombreInvitado" class="form-control" placeholder="Escribe el nombre de tu invitado"/>
					</div>
					<div class="form-group">
						<label>Apodo: </label><input type="text" ng-model="filtro.apodo" class="form-control" placeholder="Escribe el apodo de tu invitado" />
					</div>
					<div class="form-group">
						<label>Confirmado: </label>
						<select ng-model="filtro.confirmado" class="form-control">
							<option value="">Todos</option>
							<option value="true">Confirmados</option>
							<option value="false">Por Confirmar</option>
						</select>
					</div>
					
					
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<table class="table table-striped table-bordered table-hover clear">
					<thead>
						<tr>
							<th><a ng-click="orden = 'nombreInvitado'; reverse = !reverse">Nombre</a></th>
							<th class="hidden-md hidden-sm hidden-xs"><a ng-click="orden = 'apodo'; reverse= !reverse">Apodo</a></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="invitado in invitados | orderBy:orden:reverse | filter:filtro">
							<td>{{invitado.nombreInvitado}}</td>
							<td class="hidden-md hidden-sm hidden-xs">{{invitado.apodo}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>